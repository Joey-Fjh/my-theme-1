{%- comment -%}
  Renders social icons from theme settings.
  
  Accepts:
  - class: {String} Additional class for the <ul> (optional)
  - size:  {String} 'small' | 'medium' | 'large' (optional, default: medium)

  Usage:
  {% render 'social-icons', class: 'my-class', size: 'small' %}
{%- endcomment -%}

{%- assign size_class = '' -%}
{%- case social-icons.size -%}
  {%- when 'small' -%}
    {%- assign size_class = 'w-4 h-4' -%}
  {%- when 'large' -%}
    {%- assign size_class = 'w-6 h-6' -%}
  {%- else -%}
    {%- assign size_class = 'w-5 h-5' -%}
{%- endcase -%}

{%- assign has_any_social = false -%}
{%- unless settings.social_facebook_link == blank -%}{%- assign has_any_social = true -%}{%- endunless -%}
{%- unless settings.social_instagram_link == blank -%}{%- assign has_any_social = true -%}{%- endunless -%}
{%- unless settings.social_youtube_link == blank -%}{%- assign has_any_social = true -%}{%- endunless -%}
{%- unless settings.social_tiktok_link == blank -%}{%- assign has_any_social = true -%}{%- endunless -%}
{%- unless settings.social_twitter_link == blank -%}{%- assign has_any_social = true -%}{%- endunless -%}
{%- unless settings.social_pinterest_link == blank -%}{%- assign has_any_social = true -%}{%- endunless -%}
{%- unless settings.social_snapchat_link == blank -%}{%- assign has_any_social = true -%}{%- endunless -%}
{%- unless settings.social_tumblr_link == blank -%}{%- assign has_any_social = true -%}{%- endunless -%}
{%- unless settings.social_vimeo_link == blank -%}{%- assign has_any_social = true -%}{%- endunless -%}

{%- if has_any_social -%}
  <ul 
    class="list-unstyled list-social flex items-center space-x-3{% if social-icons.class %} {{ social-icons.class }}{% endif %}" 
    role="list"
  >
    {%- if settings.social_facebook_link != blank -%}
      <li class="list-social__item">
        <a href="{{ settings.social_facebook_link }}" class="link list-social__link" target="_blank" rel="noopener">
          <span class="svg-wrapper inline-block {{ size_class }}">
            {{- 'icon-facebook.svg' | inline_asset_content -}}
          </span>
          <span class="hidden">facebook</span>
        </a>
      </li>
    {%- endif -%}

    {%- if settings.social_instagram_link != blank -%}
