<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the base CSS %}
    {{ 'base.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'swiper.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'tailwind.output.css' | asset_url | stylesheet_tag: preload: true}}

    {% comment %} first loaded (base) {% endcomment %}
    <script src="{{ 'base.js' | asset_url }}" defer></script>

    {% # Load and defer the third js lib %}
    <script src="{{ 'alpine.js' | asset_url }}" defer></script>
    <script src="{{ 'swiper.js' | asset_url }}" defer></script>
    <script src="{{ 'gsap.js' | asset_url }}" defer></script>
    
    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    <main id="MainContent" class="content-for-layout shadow-none outline-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}
  </body>
</html>
