<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the base CSS %}
    {{ 'base.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'tailwind.output.css' | asset_url | stylesheet_tag: preload: true}}
    {{ 'swiper.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Load and defer the js lib %}
    <script src="{{ 'alpine.js' | asset_url }}" defer></script>
    <script src="{{ 'gsap.js' | asset_url }}" defer></script>
    <script src="{{ 'swiper.js' | asset_url }}" defer></script>

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    color_shemes:
   {%- for scheme in settings.color_schemes -%}
      show data: {{ scheme.id }}
    {% endfor %}
  </body>
</html>
