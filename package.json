{
  "name": "my-skeleton-theme",
  "version": "1.0.0",
  "description": "my skeleton theme is based on the [Skeleton](http://getskeleton.com/) framework.",
  "scripts": {
    "build:tw": "npx @tailwindcss/cli -i ./assets/tailwind.input.css -o ./assets/tailwind.output.css",
    "watch:tw": "npx @tailwindcss/cli -i ./assets/tailwind.input.css -o ./assets/tailwind.output.css --watch",
    "build:svg": "npx svgo -f icons -o assets --config=svgo.config.js",
    "test": "shopify theme check",
    "shopify:dev": "shopify theme dev -e development",
    "dev": "concurrently \"npm run shopify:dev\" \"npm run watch:tw\""
  },
  "keywords": [],
  "author": "JoeyFan",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "concurrently": "^9.2.1",
    "svgo": "^4.0.0",
    "tailwindcss": "^4.1.18"
  }
}
