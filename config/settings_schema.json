[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "load_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default":100,
        "unit": "px",
        "label":"Logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Display 32 * 32 px"
      }
    ]
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "mono",
        "label": "Font"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "unit": "%",
        "label": "Scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "mono",
        "label": "Font"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 150,
        "unit": "%",
        "label": "Scale",
        "default": 100
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "header",
        "content": "Page Settings"
      },
      {
        "type": "range",
        "id": "page_width",
        "min":1000,
        "max": 1600,
        "step": 100,
        "default":1200,
        "unit": "px",
        "label": "t:labels.page_width"
      },
      {
        "type": "range",
        "id": "page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      },
      {
        "type": "header",
        "content": "Section Settings"
      },
      {
        "type": "range",
        "id": "section_padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "section_padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background_color",
            "label": "t:labels.background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient_color",
            "label": "Background gradient",
            "info": "The background gradient will replace the background color at all applicable positions."
          },
          {
            "type": "color",
            "id": "icons_color",
            "label": "Icons color",
            "default":"#111827"
          },
          {
            "type": "color",
            "id": "links_color",
            "label": "Links color",
            "default":"#1D4ED8"
          },
          {
            "type": "color",
            "id": "primary_button_label_color",
            "label": "Primary button label color",
            "default":"#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label_color",
            "label": "Secondary button label color",
            "default":"#1D4ED8"
          },
          {
            "type": "color",
            "id": "primary_button_background_color",
            "label": "Primary button background color",
            "default":"#1D4ED8"
          },
          {
            "type": "color",
            "id": "primary_button_border_color",
            "label": "Primary button border color",
            "default":"#1D4ED8"
          },
          {
            "type": "color",
            "id": "secondary_button_background_color",
            "label": "Secondary button background color",
            "default":"#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_border_color",
            "label": "Secondary button border color",
            "default":"#1D4ED8"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Text color",
            "default":"#111827"
          }
        ],
        "role": {
          "background": {
            "solid": "background_color",
            "gradient": "background_gradient_color"
          },
          "icons": "icons_color",
          "links": "links_color",
          "on_primary_button": "primary_button_label_color",
          "on_secondary_button": "secondary_button_label_color",
          "primary_button":"primary_button_background_color",
          "primary_button_border": "primary_button_border_color",
          "secondary_button":"secondary_button_background_color",
          "secondary_button_border": "secondary_button_border_color",
          "text": "text_color"
        }
      }
    ]
  },
  {
    "name": "Input",
    "settings": [
      {
        "type": "header",
        "content": "Border"
      },
      {
        "type": "range",
        "id": "input_border_thickness",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "Input border thickness",
        "default": 1
      },
      {
        "type": "range",
        "id": "input_radius",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Input radius",
        "default":50
      },
      {
        "type": "header",
        "content": "Shadow"
      },
      {
        "type": "range",
        "id": "input_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Input shadow opacity",
        "default": 0
      },
      {
        "type": "range",
        "id": "input_shadow_horizontal_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Input shadow horizontal offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "input_shadow_vertical_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Input shadow vertical offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "input_shadow_blur",
        "min": 0,
        "max": 20,
        "step": 5,
        "unit": "px",
        "label": "Input shadow blur",
        "default": 0
      }
    ]
  },
