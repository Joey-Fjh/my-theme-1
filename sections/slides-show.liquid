<div 
  class="full-width color-{{ section.settings.color_scheme }} relative h-screen overflow-hidden"
  data-section-id="{{ section.id }}"
  data-init="false"
  data-auto-slide="{{ section.settings.is_auto_slide }}"
  data-slide-delay="{{ section.settings.slide_delay }}"
>
  <div class="swiper w-full h-full">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          {%- if block.settings.slide_image != blank -%}
            {%- capture sizes -%}
              (min-width: 80rem) 100vw, (min-width: 48rem) 1280px, 768px
            {%- endcapture -%}
            
            {%- capture widths -%}
              400,768,1280,1536,2560
            {%- endcapture -%}

            {%- assign image_loading = 'lazy' -%}
            {%- if forloop.first -%}
              {%- assign image_loading = 'eager' -%}
            {%- endif -%}

            {%- render 'image',
                image: block.settings.slide_image,
                alt: block.settings.slide_image.alt | default: shop.name | escape,
                width: block.settings.slide_image.width,
                sizes: sizes,
                widths: widths,
                loading: image_loading
            -%}
          {%- endif -%}

          <div class="content-container container-page absolute inset-0">
            <div class="inset-0 grid grid-cols-3 grid-rows-3">
              <div 
                class="{{ block.settings.heading_position }} flex items-center h-full w-full"
              >
                <hxl class="font-bold tracking-tight leading-tight">
                  {{ block.settings.headline }}
                </hxl>
              </div>

              <div
                class="{{ block.settings.caption_position }} flex flex-col h-full w-full justify-around"
              >
                <p class="font-light leading-relaxed">
                  {{ block.settings.year }}
                </p>

                <div class="mt-2 leading-tight font-light">
                  {{ block.settings.description }}
                </div>
                
                {%- capture link_content -%}
                  <span>{{ block.settings.cta_text }}</span>
                  <span class="inline-block w-6 h-6 ml-3">
                    {{- 'icon-arrow2.svg' | inline_asset_content -}}
                  </span>
                {%- endcapture -%}
                {%- render 'link', href:block.settings.cta_link,content: link_content,variant: 'underline' -%}
              </div>
              
              <div
                class="{{ block.settings.badge_position }} flex flex-col h-full w-full justify-around items-center"
              >
                <div>{{ block.settings.badge_text }}</div>
                <div>{{ block.settings.badge_counter }}</div>
              </div>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slidesShow = document.querySelector('[data-section-id="{{ section.id }}"]');
    
    if(!slidesShow || slidesShow.dataset.init === 'true') return;
    
    slidesShow.dataset.init = 'true';

    const slides = slidesShow.querySelectorAll('.swiper-slide');
    const autoSlide = slidesShow.dataset.autoSlide === 'true'; 
    const slideDelay = slidesShow.dataset.slideDelay;

    const swiperContainer = slidesShow.querySelector('.swiper');

    if(!swiperContainer || typeof Swiper === 'undefined') return;

    new Swiper(swiperContainer, {
      loop: slides.length > 1,
      autoplay: autoSlide ? {
        delay: slideDelay * 1000,
        disableOnInteraction: false
      } : false,
      slidesPerView: 1,
      effect: 'fade',
      fadeEffect: {
        crossFade: true
      },
      pagination: false,
      navigation: false
    })
  });
</script>

<style>
  [data-section-id="{{ section.id }}"] {
    .content-container{
      top: calc(var(--announcement-bar-height) + var(--header-height));
    }
  }
</style>

